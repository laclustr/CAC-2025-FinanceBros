---
const {
  title,
  description,
  href = "#",
  icon = "",
  className = "",
} = Astro.props;
---

<a href={href} class={`block bg-white dark:bg-gray-900 rounded-2xl shadow-md hover:shadow-lg transition-all p-6 ${className}`}>
    <div class="flex items-center gap-4">
      {icon && (
        <div class="text-3xl text-blue-600 dark:text-blue-400">
          <img src={icon} alt="" class="w-8 h-8" />
        </div>
      )}
      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{title}</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">{description}</p>
      </div>
    </div>
  </a>