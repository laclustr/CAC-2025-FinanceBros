---
import { Image } from 'astro:assets';

const {
  title,
  description,
  imgAlign = "left",
  img = null,
  alt = '',
  imageWidth = 400,
  imageHeight = 400,
  imageClass = "rounded-xl",
} = Astro.props;
---

<div
  class={`
    relative w-[98%] max-w-none mx-auto px-4 sm:px-6 lg:px-8
    bg-[#000435] rounded-xl border-2 border-gray-200/20
    shadow-lg hover:shadow-xl hover:border-gray-200/30
    transition-all duration-300 ease-out
    overflow-hidden
  `}
>
  <div
    class={`
      flex flex-col gap-8 p-6 sm:p-8 lg:p-12
      lg:flex-row lg:items-center lg:gap-12
      ${imgAlign === 'right' ? 'lg:flex-row-reverse' : ''}
    `}
  >
    {img && (
      <div class="w-full lg:w-1/2 flex-shrink-0">
        <div class="relative aspect-square max-w-lg mx-auto lg:max-w-none">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-purple-500/10 rounded-xl blur-xl"></div>
          <div class="relative rounded-xl overflow-hidden bg-gray-900/50 backdrop-blur-sm border border-gray-700/50">
            <Image
              src={img}
              alt={alt}
              width={imageWidth}
              height={imageHeight}
              class="w-full h-full object-cover object-center"
              loading="lazy"
              quality={90}
              format="webp"
              densities={[1, 1.5, 2]}
            />
          </div>
        </div>
      </div>
    )}
    
    <div class={`
      flex-1 flex flex-col justify-center space-y-6
      text-center lg:text-left
      ${imgAlign === 'right' ? 'lg:text-right' : ''}
      ${!img ? 'lg:text-center' : ''}
    `}>
      <div class="space-y-4">
        <h3 class={`
          font-bold text-white leading-tight
          text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl
          bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent
        `}>
          {title}
        </h3>
        
        <div class={`
          w-16 h-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full
          mx-auto lg:mx-0
          ${imgAlign === 'right' ? 'lg:ml-auto lg:mr-0' : ''}
        `}></div>
        
        <p class={`
          text-gray-300 leading-relaxed max-w-2xl
          text-base sm:text-lg md:text-xl lg:text-xl
          ${imgAlign === 'right' ? 'lg:ml-auto' : ''}
          ${!img ? 'lg:mx-auto' : ''}
        `}>
          {description}
        </p>
      </div>
    </div>
  </div>

  <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-blue-500/5 to-transparent rounded-bl-full"></div>
  <div class="absolute bottom-0 left-0 w-24 h-24 bg-gradient-to-tr from-purple-500/5 to-transparent rounded-tr-full"></div>
</div>
