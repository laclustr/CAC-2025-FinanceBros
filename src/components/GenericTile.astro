---
import { Image } from 'astro:assets';

const {
  title,
  description,
  imgAlign = "left",
  img = null,
  alt = '',
  imageWidth = 300,
  imageHeight = 300,
  imageClass = "rounded-xl max-w-full h-auto",
} = Astro.props;

const isRight = imgAlign === 'right';
---

<div
  class={`flex flex-col-reverse ${
    isRight ? 'lg:flex-row-reverse' : 'lg:flex-row'
  } items-center gap-6 w-full bg-[#000435] border-2 rounded-xl border-gray-200 shadow-md hover:shadow-lg transition-all p-6 md:p-12`}
>
  {img && (
    <div class="w-full lg:w-2/5 flex-shrink-0">
      <Image
        src={img}
        alt={alt}
        width={imageWidth}
        height={imageHeight}
        class={imageClass}
        loading="lazy"
      />
    </div>
  )}
  <div class="w-full lg:w-3/5 text-center lg:text-left">
    <h3 class="text-2xl md:text-3xl font-semibold text-white">{title}</h3>
    <p class="text-base md:text-lg text-gray-300 mt-2">{description}</p>
  </div>
</div>